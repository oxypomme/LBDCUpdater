<Window x:Class="LBDCUpdater.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LBDCUpdater"
        mc:Ignorable="d"
        Width="350"
        SizeToContent="Height"
        Title="Downloading" Closed="Window_Closed">
    <StackPanel>
        <Label Name="globalProgressionText" HorizontalAlignment="Center" d:Content="24/144 (16%)" />
        <ProgressBar Height="12" Name="globalProgressionBar" />
        <Label HorizontalAlignment="Center" Name="fileProgressionText" d:Content="mod-version-forge.jar (1.24/4.86 Mo)" />
        <ProgressBar Height="12" Name="fileProgressionBar" />
        <Separator />
        <Button Content="Annuler" Click="Button_Click" />
    </StackPanel>
</Window>